<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/add_reminder_24dp"
                android:id="@+id/imageButton3" android:layout_margin="20px" android:tooltipText="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/add_reminder_24dp"
                android:id="@+id/imageButton4" android:layout_gravity="center" android:layout_marginTop="30px"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/add_reminder_24dp"
                android:id="@+id/imageButton5" android:layout_gravity="right" android:layout_margin="20px"
                android:background="@drawable/bottomnav"/>
    </FrameLayout>
</LinearLayout>