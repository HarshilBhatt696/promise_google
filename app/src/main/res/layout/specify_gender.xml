<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center" android:layout_weight="0"
              android:padding="40px">

    <TextView
            android:text="specify your gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="0"
            android:textColor="@color/colorAccent" android:textSize="28sp" android:fontFamily="@font/boogaloo"
            android:gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <Button
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:background="@drawable/ccc_textfield" android:layout_margin="50px" android:id="@+id/Female"/>
        <Button
                android:text="Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:background="@drawable/acceptbutton" android:layout_margin="50px" android:id="@+id/Male"/>
    </LinearLayout>
</LinearLayout>