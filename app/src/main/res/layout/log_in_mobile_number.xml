<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical" android:gravity="bottom"
>

    <com.airbnb.lottie.LottieAnimationView android:layout_width="match_parent" android:layout_height="match_parent"
                                           android:id="@+id/HEs" app:lottie_loop="true"
                                           app:lottie_rawRes="@raw/data" app:lottie_autoPlay="true"
                                           android:layout_weight="1" android:layout_margin="100px"/>
    <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button2" android:layout_weight="0"
            android:gravity="center" android:layout_gravity="bottom|center"
            android:background="@drawable/same_color_background" android:padding="40px"
            android:layout_marginStart="70px" android:layout_marginLeft="70px" android:layout_marginRight="70px"
            android:layout_marginEnd="70px" android:layout_marginBottom="250px" android:textColor="@color/colorAccent"/>


</LinearLayout>