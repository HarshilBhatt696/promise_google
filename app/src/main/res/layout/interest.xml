<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Interest" android:orientation="vertical" android:background="@color/NewMatchCell">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Sports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/CategoryNameText" android:layout_weight="0"
                    android:textSize="70px" android:layout_margin="100px" android:textColor="@color/fui_bgEmail"
                    android:fontFamily="@font/black_ops_one"/>
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="0" android:layout_margin="80px"
                    android:id="@+id/RadioGroup">
                <RadioButton
                        android:text="Football"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/Interest1" android:layout_weight="3"
                        android:checked="true" android:fontFamily="@font/cutive"
                        android:background="@drawable/bottomnav"
                        android:layout_marginBottom="20px" android:layout_marginTop="40px"/>
                <RadioButton
                        android:text="Basket Ball"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/Interest2" android:layout_weight="3"
                        android:fontFamily="@font/cutive" android:background="@drawable/bottomnav"
                        android:layout_marginBottom="20px" android:visibility="visible"
                        android:layout_marginTop="40px"/>
                <RadioButton
                        android:text="Cricket"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/Interest3" android:layout_weight="3"
                        android:fontFamily="@font/cutive" android:background="@drawable/bottomnav"
                        android:layout_marginBottom="20px" android:visibility="visible"
                        android:layout_marginTop="40px"/>
                <RadioButton
                        android:text="Badminton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/Interest4" android:layout_weight="3"
                        android:fontFamily="@font/cutive" android:background="@drawable/bottomnav"
                        android:layout_marginBottom="20px" android:visibility="visible"
                        android:layout_marginTop="40px"/>
                <RadioButton
                        android:text="Tennis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/Interest5" android:layout_weight="3"
                        android:fontFamily="@font/cutive" android:background="@drawable/bottomnav"
                        android:layout_marginBottom="20px" android:visibility="visible"
                        android:layout_marginTop="40px"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0" android:gravity="bottom|center"
                android:layout_gravity="bottom">
            <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px" app:srcCompat="@drawable/ic_send_black_24dp"
                    android:id="@+id/PreviousInterest" android:layout_weight="0" android:foregroundGravity="right"
                    android:rotation="180" android:layout_margin="100px" android:visibility="gone"/>
            <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px" app:srcCompat="@drawable/go_right"
                    android:id="@+id/NextInterest" android:layout_weight="0" android:foregroundGravity="right"
                    android:layout_margin="100px" android:background="@drawable/acceptbutton"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>