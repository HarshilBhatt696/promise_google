<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/request_cell"
              android:layout_margin="20px">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="450px" app:srcCompat="@drawable/acceptbutton"
                    android:id="@+id/ReqeustImage"/>
            <TextView
                    android:text="Natasha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:textColor="@android:color/black" android:fontFamily="@font/baloo_da"
                    android:gravity="center" android:textSize="20sp" android:layout_gravity="bottom|center"
                    android:layout_margin="20px"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/bio" android:layout_weight="0"
                    android:fontFamily="@font/baloo_da" android:gravity="center"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/MatchBy" android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ViewProfile" android:visibility="gone">
        <ImageView
                android:layout_width="200px"
                android:layout_height="200px" app:srcCompat="@drawable/background_for_cell_update"
                android:id="@+id/ReqeustImage" android:layout_margin="20px" android:layout_weight="0"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/UserNameRequestText"
                    android:layout_margin="20px" android:textColor="@color/NormalBackground"
                    android:textSize="21dp" android:fontFamily="@font/damion"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="0"
                    android:layout_margin="20px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>