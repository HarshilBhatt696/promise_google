<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="40px">
        <ImageView
                android:id="@+id/roundedimag"
                android:layout_width="260px"
                android:layout_height="260px"
                android:scaleType="centerCrop"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/MyName" android:layout_weight="1"
                android:textColor="@android:color/black" android:textSize="80px" android:layout_margin="50px"
                android:fontFamily="@font/boogaloo"/>
    </LinearLayout>
    <TextView
            android:text="Set Bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_margin="30px"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:id="@+id/Bio" android:layout_margin="30px"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="bottom" android:scrollIndicators="bottom"
            android:gravity="bottom">
        <Button
                android:text="Confirm Changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Confirm" android:layout_weight="1"
                android:background="@drawable/ccc_textfield"
                android:textColor="@color/browser_actions_bg_grey"
                android:layout_marginLeft="90px" android:layout_marginStart="90px" android:layout_marginEnd="90px"
                android:layout_marginRight="90px"/>
    </LinearLayout>
    <Switch
            android:text="Match Make with Same Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/MatchMakeSameGender" android:layout_margin="100px"
            android:checked="false"/>
    <Button
            android:text="Sign Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/SignOut" android:layout_weight="0"
            android:background="@drawable/messaging_cell_draw"
            android:textColor="@color/TextColors"
            android:layout_gravity="bottom|center" android:layout_margin="300px"/>
</LinearLayout>