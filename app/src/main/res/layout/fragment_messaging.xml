<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#E6EDF3">
    <Button
            android:text="Refresh"
            android:layout_width="170px"
            android:layout_height="120px" android:id="@+id/button5" android:layout_gravity="right"
            android:layout_margin="80px" android:background="@drawable/acceptbutton" android:textSize="10sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:textColor="@android:color/black" android:fontFamily="@font/boogaloo" android:textSize="36sp"
                android:layout_marginTop="70px" android:layout_marginStart="70px" android:layout_marginBottom="80px"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/NoMoreItems"
                android:textColor="@color/colorAccent" android:textSize="45px" android:gravity="center"
                android:visibility="gone" android:fontFamily="@font/coiny"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/RecylerMessagingView"
                android:layout_margin="30px"/>
    </LinearLayout>
</FrameLayout>