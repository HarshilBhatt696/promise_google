<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@drawable/cell_updates_drawb"
              android:layout_margin="20px">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Names Taken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:gravity="center"
                android:textSize="80px" android:padding="50px"
                android:textColor="#FF3D00"/>
        <Button
                android:text="Ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Ok"
                android:background="@drawable/background_for_cell_update"
                android:textSize="80px" android:layout_margin="50px"/>
    </LinearLayout>
</LinearLayout>