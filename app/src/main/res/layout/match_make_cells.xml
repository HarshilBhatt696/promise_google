<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="1600px" android:orientation="vertical" android:gravity="center"
              android:background="@drawable/matchmakingbackgroun">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="750px"
                android:id="@+id/imageView2"
                app:srcCompat="@drawable/c"
                android:layout_marginTop="10px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Percentage" android:fontFamily="@font/boogaloo"
                android:layout_gravity="bottom|right" android:layout_margin="30px"/>
    </FrameLayout>
    <TextView
            android:text="Bio comes here even if the most imporssioble task are persfoenfa fajdf hagien "
            android:layout_width="match_parent"
            android:layout_height="170px" android:id="@+id/textView7" android:layout_margin="70px"
            android:textColor="@color/com_facebook_likeboxcountview_border_color" android:fontFamily="@font/coiny"
            android:textSize="40px"
            android:gravity="center"/>
    <Button
            android:text="View Profile"
            android:layout_width="match_parent"
            android:layout_height="150px" android:id="@+id/ViewProfile" android:layout_weight="0"
            android:background="@drawable/ccc_textfield" android:layout_margin="70px"
            android:textColor="@color/NewMatchCell" android:visibility="visible" android:layout_marginBottom="100px"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:visibility="gone">
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/view7" android:layout_weight="1"/>
        <com.google.android.material.navigation.NavigationView
                android:layout_width="125px"
                android:layout_height="125px" android:background="@drawable/acceptbutton" android:layout_margin="5px"
        >
            <Button
                    android:layout_width="150px"
                    android:layout_height="150px" android:id="@+id/button10" android:background="@drawable/go_left"
                    android:gravity="center" android:layout_gravity="center"/>
        </com.google.android.material.navigation.NavigationView>
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/view4" android:layout_weight="1"/>
        <com.google.android.material.navigation.NavigationView
                android:layout_width="175px"
                android:layout_height="175px" android:background="@drawable/fui_idp_button_background_twitter"
                android:layout_margin="5px" android:layout_marginLeft="20px">
            <Button
                    android:layout_width="200px"
                    android:layout_height="200px" android:id="@+id/button7"
                    android:background="@drawable/request_cell_heart" android:layout_gravity="center"/>
        </com.google.android.material.navigation.NavigationView>
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/view5" android:layout_weight="1"/>
        <com.google.android.material.navigation.NavigationView
                android:layout_width="175px"
                android:layout_height="175px" android:background="@drawable/fui_idp_button_background_twitter"
                android:layout_margin="5px" android:layout_marginLeft="20px">
            <Button
                    android:layout_width="200px"
                    android:layout_height="200px" android:id="@+id/button7"
                    android:background="@drawable/ic_cancel_black_24dp" android:layout_gravity="center"/>
        </com.google.android.material.navigation.NavigationView>
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/view6" android:layout_weight="1"/>
        <com.google.android.material.navigation.NavigationView
                android:layout_width="125px"
                android:layout_height="125px" android:background="@drawable/acceptbutton"
                android:layout_margin="5px" android:layout_marginLeft="20px">
            <Button
                    android:layout_width="150px"
                    android:layout_height="150px" android:id="@+id/button7"
                    android:background="@drawable/go_right" android:layout_gravity="center"/>
        </com.google.android.material.navigation.NavigationView>
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/view8" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>